<resources>
    <style name="Theme.CalculadoraCientifica" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
    </style>

    <style name="CalculatorButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_margin">2dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/button_text</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:elevation">2dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_rowWeight">1</item>
        <item name="android:layout_gravity">fill</item>
    </style>

    <style name="NumberButton" parent="CalculatorButton">
        <item name="backgroundTint">@color/number_button</item>
    </style>

    <style name="OperationButton" parent="CalculatorButton">
        <item name="backgroundTint">@color/operation_button</item>
        <item name="android:textSize">24sp</item> </style>

    <style name="ScientificButton" parent="CalculatorButton">
        <item name="backgroundTint">@color/scientific_button</item>
        <item name="android:textSize">16sp</item> </style>

    <style name="FunctionButton" parent="CalculatorButton">
        <item name="backgroundTint">@color/function_button</item>
    </style>

    <style name="EqualsButton" parent="CalculatorButton">
        <item name="backgroundTint">@color/equals_button</item>
        <item name="android:textSize">24sp</item> </style>
</resources>